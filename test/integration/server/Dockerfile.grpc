# Dockerfile for gRPC server
FROM golang:1.23-alpine

# Allow Go toolchain auto-upgrade
ENV GOTOOLCHAIN=auto

# Install runtime dependencies
RUN apk add --no-cache ca-certificates

# Install grpc_health_probe
RUN GRPC_HEALTH_PROBE_VERSION=v0.4.24 && \
    wget -qO/bin/grpc_health_probe https://github.com/grpc-ecosystem/grpc-health-probe/releases/download/${GRPC_HEALTH_PROBE_VERSION}/grpc_health_probe-linux-amd64 && \
    chmod +x /bin/grpc_health_probe

WORKDIR /app

# Copy go modules
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Build gRPC server
RUN go build -tags local -o /usr/local/bin/objstore-server ./cmd/objstore-server

# Create storage directory
RUN mkdir -p /tmp/objstore

EXPOSE 50051

CMD ["objstore-server", "-grpc=true", "-rest=false", "-grpc-addr", ":50051", "-backend", "local", "-path", "/tmp/objstore"]
