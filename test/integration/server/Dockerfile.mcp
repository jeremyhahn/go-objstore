# Dockerfile for MCP server
FROM golang:1.23-alpine

# Allow Go toolchain auto-upgrade
ENV GOTOOLCHAIN=auto

# Install runtime dependencies
RUN apk add --no-cache ca-certificates curl

WORKDIR /app

# Copy go modules
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Build MCP server
RUN go build -tags local -o /usr/local/bin/objstore-mcp-server ./cmd/objstore-mcp-server

# Create storage directory
RUN mkdir -p /tmp/objstore

EXPOSE 8081

# Run MCP server in HTTP mode
CMD ["objstore-mcp-server", "-mode", "http", "-addr", ":8081", "-backend", "local", "-path", "/tmp/objstore"]
